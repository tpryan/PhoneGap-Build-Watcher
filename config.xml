<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.terrenceryan.pgbwatcher"
        versionCode = "10" 
        version     = "1.0.0">

    <name>PhoneGap Build Watcher</name>

    <description>
        An application for watching an application on PhoneGap Build to see if it is rebuilt.
    </description>

    <author href="https://terrenceryan.com" email="terry@terrenceryan.com">
        Terry Ryan
    </author>

    <!-- default icon-->
   <icon src="icons/icon86.png" default="true" />

    <!-- iOS icons-->
    <icon src="icons/icon57.png" width="57" height="57"/>
    <icon src="icons/icon72.png" width="72" height="72"/>
    <icon src="icons/icon114.png" width="114" height="114"/>

    <!-- Android icons -->
    <icon src="icons/icon36.png" width="36" height="36"/>
    <icon src="icons/icon48.png" width="48" height="48"/>
    <icon src="icons/icon72.png" width="72" height="72"/>



    <gap:splash src="splash/splash_base.png"/>
    <gap:splash src="splash/splash_small.png" width="320" height="480"/>
    <gap:splash src="splash/splash_retina.png" width="640" height="960"/>
    <gap:splash src="splash/splash_ipad_portrait.png" width="768" height="1004"/>
    <gap:splash src="splash/splash_ipad_landscape.png" width="1024" height="748"/>

    <feature name="http://api.phonegap.com/1.0/notification"/>
    <access origin="https://build.phonegap.com" browserOnly="true" />
</widget>